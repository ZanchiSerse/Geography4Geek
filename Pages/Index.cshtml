                    <div class="dashboard-header">
                        <i class="fas fa-chart-bar me-2"></i>
                        <span>Dashboard Insegnante</span>
                    </div>
                    <div class="dashboard-body">
                        <div class="dashboard-stats">
                            <div class="dashboard-stat">
                                <div class="stat-icon">
                                    <i class="fas fa-user-graduate"></i>
                                </div>
                                <div class="stat-info">
                                    <div class="stat-value counter">15</div>
                                    <div class="stat-label">Studenti Attivi</div>
                                </div>
                            </div>
                            <div class="dashboard-stat">
                                <div class="stat-icon">
                                    <i class="fas fa-clipboard-check"></i>
                                </div>
                                <div class="stat-info">
                                    <div class="stat-value counter">78</div>
                                    <div class="stat-label">Quiz Completati</div>
                                </div>
                            </div>
                            <div class="dashboard-stat">
                                <div class="stat-icon">
                                    <i class="fas fa-trophy"></i>
                                </div>
                                <div class="stat-info">
                                    <div class="stat-value counter">72</div>
                                    <div class="stat-label">Punteggio Medio</div>
                                </div>
                            </div>
                        </div>
