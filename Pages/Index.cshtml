    <script>

        // Script per caricare le bandiere in modo sicuro
        document.addEventListener('DOMContentLoaded', function() {
            // Funzione per caricare una bandiera con gestione degli errori
            function loadFlag(countryCode, elementId) {
                if (!countryCode || !elementId) return;

                const flagUrl = `https://flagcdn.com/w40/${countryCode.toLowerCase()}.png`;
                const img = new Image();

                img.onload = function() {
                    // La bandiera è stata caricata con successo
                    const flagElement = document.getElementById(elementId);
                    if (flagElement) {
                        flagElement.innerHTML = '';
                        flagElement.style.background = `url(${flagUrl}) center/cover no-repeat`;
                        flagElement.style.color = 'transparent';
                    }
                };

                img.onerror = function() {
                    // Errore nel caricamento, lascia il fallback con il codice paese
                    console.log(`Impossibile caricare la bandiera per ${countryCode}`);
                };

                img.src = flagUrl;
            }

            // Carica le bandiere per ogni paese
            loadFlag('it', 'italy-flag');
            loadFlag('jp', 'japan-flag');
            loadFlag('br', 'brazil-flag');
        });
    </script>

