@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/countup.js@2.0.7/dist/countUp.min.js"></script>

    <script>
        // Initialize AOS (Animate on Scroll)
        document.addEventListener('DOMContentLoaded', function() {
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true,
                mirror: false
            });

            // Initialize CountUp.js for number animation
            const counterElements = document.querySelectorAll('.counter');
            counterElements.forEach(function(el) {
                const value = parseInt(el.textContent, 10);
                const countUp = new CountUp(el, value, {
                    duration: 2.5,
                    separator: ',',
                    useEasing: true
                });

                if (!countUp.error) {
                    countUp.start();
                } else {
                    console.error(countUp.error);
                }
            });

            // Load country flags
            function loadFlag(countryCode, elementId) {
                if (!countryCode || !elementId) return;

                const flagUrl = `https://flagcdn.com/w80/${countryCode.toLowerCase()}.png`;
                const img = new Image();

                img.onload = function() {
                    const flagElement = document.getElementById(elementId);
                    if (flagElement) {
                        flagElement.style.backgroundImage = `url(${flagUrl})`;
                    }
                };

                img.onerror = function() {
                    console.log(`Impossibile caricare la bandiera per ${countryCode}`);
                };

                img.src = flagUrl;
            }

            // Load flags for countries
            loadFlag('it', 'italy-flag');
            loadFlag('jp', 'japan-flag');
            loadFlag('br', 'brazil-flag');

            // Add hover effects to chart bars
            const chartBars = document.querySelectorAll('.chart-bar');
            chartBars.forEach(bar => {
                bar.addEventListener('mouseenter', function() {
                    this.style.opacity = '0.9';
                });

                bar.addEventListener('mouseleave', function() {
                    this.style.opacity = '1';
                });
            });

            // Add smooth scroll for navigation links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();

                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>
