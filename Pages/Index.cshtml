@page
@model Geography4Geek_1.Pages.IndexModel
@{
    ViewData["Title"] = "Geography4Geek - Esplora e Impara";
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h1 class="display-4 fw-bold text-primary mb-3">Esplora il Mondo con Geography4Geek</h1>
                <p class="lead mb-4">Una piattaforma educativa interattiva che unisce l'esplorazione geografica al divertimento dei quiz. Naviga sul nostro globo 3D, scopri informazioni dettagliate sui paesi e metti alla prova le tue conoscenze!</p>

                @if (!User.Identity?.IsAuthenticated ?? true)
                {
                    <div class="cta-buttons">
                        <a href="/Account/Register" class="btn btn-primary btn-lg me-3 px-4 py-2 shadow-sm">
                            <i class="fas fa-user-plus me-2"></i>Registrati Ora
                        </a>
                        <a href="/Account/Login" class="btn btn-outline-primary btn-lg px-4 py-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Accedi
                        </a>
                    </div>
                }
                else
                {
                    <div class="cta-buttons">
                        <a href="/Globe/Index" class="btn btn-primary btn-lg me-3 px-4 py-2 shadow-sm">
                            <i class="fas fa-globe-americas me-2"></i>Esplora il Globo
                        </a>
                    </div>
                }
            </div>
            <div class="col-lg-6">
                <!-- Globo animato con CSS -->
                <div class="globe-animation-container">
                    <div class="globe-illustration">
                        <i class="fas fa-globe-americas"></i>
                    </div>
                    <div class="floating-item floating-pin1">
                        <i class="fas fa-map-pin"></i>
                    </div>
                    <div class="floating-item floating-pin2">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="floating-item floating-quiz">
                        <i class="fas fa-question-circle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Caratteristiche Principali</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="feature-card shadow-sm h-100">
                    <div class="feature-icon">
                        <i class="fas fa-globe-americas"></i>
                    </div>
                    <h3>Globo 3D Interattivo</h3>
                    <p>Esplora il mondo con un globo tridimensionale completamente interattivo. Ruota, zoom e seleziona qualsiasi paese con un semplice click.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card shadow-sm h-100">
                    <div class="feature-icon">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <h3>Informazioni Dettagliate</h3>
                    <p>Accedi a informazioni complete e aggiornate su ogni paese: geografia, storia, cultura, economia e curiosità interessanti.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card shadow-sm h-100">
                    <div class="feature-icon">
                        <i class="fas fa-question-circle"></i>
                    </div>
                    <h3>Quiz Personalizzati</h3>
                    <p>Metti alla prova le tue conoscenze con quiz generati dinamicamente in base al paese selezionato. Scegli la difficoltà e il numero di domande.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Country Exploration -->
<section class="countries-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Esplora Paesi da Tutto il Mondo</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="country-card shadow h-100">
                    <div class="country-icon europe-bg">
                        <i class="fas fa-monument"></i>
                    </div>
                    <div class="country-info">
                        <div class="country-flag-placeholder" id="italy-flag">IT</div>
                        <h4>Italia</h4>
                        <p>Storia millenaria, arte rinascimentale, e paesaggi mozzafiato dalle Alpi alla Sicilia.</p>
                        <div class="country-tags">
                            <span class="badge bg-light text-dark">Europa</span>
                            <span class="badge bg-light text-dark">Storia</span>
                            <span class="badge bg-light text-dark">Arte</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="country-card shadow h-100">
                    <div class="country-icon asia-bg">
                        <i class="fas fa-torii-gate"></i>
                    </div>
                    <div class="country-info">
                        <div class="country-flag-placeholder" id="japan-flag">JP</div>
                        <h4>Giappone</h4>
                        <p>Tradizione e innovazione si fondono in questo affascinante paese asiatico.</p>
                        <div class="country-tags">
                            <span class="badge bg-light text-dark">Asia</span>
                            <span class="badge bg-light text-dark">Tecnologia</span>
                            <span class="badge bg-light text-dark">Cultura</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="country-card shadow h-100">
                    <div class="country-icon americas-bg">
                        <i class="fas fa-futbol"></i>
                    </div>
                    <div class="country-info">
                        <div class="country-flag-placeholder" id="brazil-flag">BR</div>
                        <h4>Brasile</h4>
                        <p>Foreste pluviali, spiagge tropicali e una vibrante cultura in Sudamerica.</p>
                        <div class="country-tags">
                            <span class="badge bg-light text-dark">Sudamerica</span>
                            <span class="badge bg-light text-dark">Natura</span>
                            <span class="badge bg-light text-dark">Musica</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How it Works -->
<section class="how-it-works py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Come Funziona</h2>
        <div class="process-timeline">
            <div class="timeline-item">
                <div class="timeline-number">1</div>
                <div class="timeline-content">
                    <h4><i class="fas fa-sign-in-alt text-primary me-2"></i>Registrati o Accedi</h4>
                    <p>Crea un account gratuito per accedere a tutte le funzionalità della piattaforma. Gli insegnanti ottengono strumenti aggiuntivi per monitorare i progressi degli studenti.</p>
                </div>
            </div>
            <div class="timeline-item">
                <div class="timeline-number">2</div>
                <div class="timeline-content">
                    <h4><i class="fas fa-globe-americas text-primary me-2"></i>Naviga il Globo 3D</h4>
                    <p>Usa il nostro globo interattivo per esplorare il mondo. Ruota, zooma e clicca su qualsiasi paese per selezionarlo.</p>
                </div>
            </div>
            <div class="timeline-item">
                <div class="timeline-number">3</div>
                <div class="timeline-content">
                    <h4><i class="fas fa-book-open text-primary me-2"></i>Scopri Informazioni</h4>
                    <p>Accedi a dati completi sul paese selezionato: geografia, storia, popolazione, economia e curiosità.</p>
                </div>
            </div>
            <div class="timeline-item">
                <div class="timeline-number">4</div>
                <div class="timeline-content">
                    <h4><i class="fas fa-question-circle text-primary me-2"></i>Genera Quiz</h4>
                    <p>Crea quiz personalizzati sul paese che stai esplorando. Scegli il numero di domande e il livello di difficoltà.</p>
                </div>
            </div>
            <div class="timeline-item">
                <div class="timeline-number">5</div>
                <div class="timeline-content">
                    <h4><i class="fas fa-chart-line text-primary me-2"></i>Monitora i Progressi</h4>
                    <p>Visualizza i tuoi risultati e monitora i tuoi miglioramenti nel tempo. Gli insegnanti possono accedere a statistiche dettagliate sugli studenti.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quiz Preview -->
<section class="quiz-preview py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h2 class="mb-4">Quiz Interattivi e Personalizzati</h2>
                <p class="lead">Metti alla prova le tue conoscenze con quiz generati automaticamente in base alle informazioni del paese selezionato.</p>

                <div class="quiz-features mt-4">
                    <div class="quiz-feature">
                        <i class="fas fa-sliders-h text-primary"></i>
                        <div>
                            <h5>Livelli di Difficoltà</h5>
                            <p>Scegli tra facile, medio e difficile in base alla tua preparazione.</p>
                        </div>
                    </div>
                    <div class="quiz-feature">
                        <i class="fas fa-list-ol text-primary"></i>
                        <div>
                            <h5>Numero di Domande</h5>
                            <p>Personalizza la lunghezza del quiz: 5, 10, 15 o 20 domande.</p>
                        </div>
                    </div>
                    <div class="quiz-feature">
                        <i class="fas fa-brain text-primary"></i>
                        <div>
                            <h5>Domande Intelligenti</h5>
                            <p>Domande generate dinamicamente dalle informazioni più recenti.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="quiz-card shadow">
                    <div class="quiz-header">
                        <span class="quiz-title">Quiz sull'Italia</span>
                        <span class="quiz-badge">Medio</span>
                    </div>
                    <div class="quiz-body">
                        <div class="quiz-question">
                            <span class="question-number">1</span>
                            <p>Qual è la capitale dell'Italia?</p>
                        </div>
                        <div class="quiz-options">
                            <div class="option">
                                <input type="radio" id="answer1" name="question1">
                                <label for="answer1">Milano</label>
                            </div>
                            <div class="option correct">
                                <input type="radio" id="answer2" name="question1" checked>
                                <label for="answer2">Roma</label>
                            </div>
                            <div class="option">
                                <input type="radio" id="answer3" name="question1">
                                <label for="answer3">Firenze</label>
                            </div>
                            <div class="option">
                                <input type="radio" id="answer4" name="question1">
                                <label for="answer4">Napoli</label>
                            </div>
                        </div>
                        <div class="quiz-navigation">
                            <button class="btn btn-outline-secondary btn-sm disabled">Precedente</button>
                            <div class="quiz-progress">
                                <div class="progress">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 10%;" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span>1/10</span>
                            </div>
                            <button class="btn btn-primary btn-sm">Successiva</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- For Teachers -->
<section class="teachers-section py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-2 mb-4 mb-lg-0">
                <h2 class="mb-4">Strumenti per Insegnanti</h2>
                <p class="lead">Geography4Geek offre funzionalità speciali per gli educatori che desiderano integrare la geografia nel curriculum.</p>

                <div class="teacher-features mt-4">
                    <div class="teacher-feature">
                        <i class="fas fa-chart-bar text-success"></i>
                        <div>
                            <h5>Dashboard Analitica</h5>
                            <p>Monitora i progressi degli studenti con grafici dettagliati e statistiche.</p>
                        </div>
                    </div>
                    <div class="teacher-feature">
                        <i class="fas fa-users text-success"></i>
                        <div>
                            <h5>Gestione Studenti</h5>
                            <p>Visualizza i risultati individuali e identifica aree di miglioramento.</p>
                        </div>
                    </div>
                    <div class="teacher-feature">
                        <i class="fas fa-tasks text-success"></i>
                        <div>
                            <h5>Risultati Quiz</h5>
                            <p>Analizza le prestazioni per argomento e difficoltà.</p>
                        </div>
                    </div>
                </div>

                @if (User.Identity?.IsAuthenticated ?? false && User.IsInRole("Teacher"))
                {
                    <div class="mt-4">
                        <a href="/Teacher/Dashboard" class="btn btn-success">
                            <i class="fas fa-chart-bar me-2"></i>Accedi alla Dashboard
                        </a>
                    </div>
                }
                else if (!(User.Identity?.IsAuthenticated ?? false))
                {
                    <div class="mt-4">
                        <a href="/Account/Register" class="btn btn-outline-success">
                            <i class="fas fa-chalkboard-teacher me-2"></i>Registrati come Insegnante
                        </a>
                    </div>
                }
            </div>
            <div class="col-lg-6 order-lg-1">
                <div class="dashboard-preview shadow">
                    <div class="dashboard-header">
                        <i class="fas fa-chart-bar"></i>
                        <span>Dashboard Insegnante</span>
                    </div>
                    <div class="dashboard-body">
                        <div class="dashboard-stat">
                            <div class="stat-value">15</div>
                            <div class="stat-label">Studenti Attivi</div>
                        </div>
                        <div class="dashboard-stat">
                            <div class="stat-value">78</div>
                            <div class="stat-label">Quiz Completati</div>
                        </div>
                        <div class="dashboard-stat">
                            <div class="stat-value">72%</div>
                            <div class="stat-label">Punteggio Medio</div>
                        </div>
                        <div class="dashboard-chart">
                            <div class="chart-bars">
                                <div class="chart-bar" style="height: 60%;"><span>L</span></div>
                                <div class="chart-bar" style="height: 80%;"><span>M</span></div>
                                <div class="chart-bar" style="height: 45%;"><span>M</span></div>
                                <div class="chart-bar" style="height: 65%;"><span>G</span></div>
                                <div class="chart-bar" style="height: 75%;"><span>V</span></div>
                            </div>
                            <div class="chart-label">Attività Settimanale</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
