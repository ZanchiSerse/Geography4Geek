        /* Globe Animation */
        .globe-container {
            position: relative;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .globe-wrapper {
            position: relative;
            width: 300px;
            height: 300px;
        }
        
        .globe {
            position: relative;
            width: 220px;
            height: 220px;
            margin: 0 auto;
        }
        
        .globe-sphere {
            position: absolute;
            width: 220px;
            height: 220px;
            background: linear-gradient(145deg, #3498db, #2980b9);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 8rem;
            box-shadow: 0 10px 30px rgba(41, 128, 185, 0.4),
                        inset 0 -5px 15px rgba(0, 0, 0, 0.2),
                        inset 0 5px 15px rgba(255, 255, 255, 0.2);
            animation: rotate 20s linear infinite, pulse 4s ease-in-out infinite;
            z-index: 2;
        }
        
        .globe-ring {
            position: absolute;
            top: 10%;
            left: -10%;
            width: 280px;
            height: 180px;
            border: 4px solid rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            transform: rotateX(80deg) rotateY(10deg);
            animation: rotateRing 15s linear infinite;
            z-index: 1;
        }
        
        .globe-ring-2 {
            top: 15%;
            left: -20%;
            width: 320px;
            height: 160px;
            border-color: rgba(255, 255, 255, 0.08);
            animation-direction: reverse;
            animation-duration: 20s;
