        .marker-1 {
            top: 40px;
            right: 60px;
            color: #e74c3c;
            animation: floatMarker 5s ease-in-out infinite;
        }
        
        .marker-2 {
            bottom: 50px;
            left: 40px;
            color: #f39c12;
            animation: floatMarker 5s ease-in-out infinite 1s;
        }
        
        .marker-3 {
            top: 130px;
            right: 30px;
            color: #1abc9c;
            animation: floatMarker 5s ease-in-out infinite 2s;
        }
        
        .pulse {
            animation: pulse 2s infinite;
        }
        
        @@keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        
        @@keyframes rotateRing {
            from { transform: rotateX(80deg) rotateY(10deg) rotate(0deg); }
            to { transform: rotateX(80deg) rotateY(10deg) rotate(360deg); }
        }
        
        @@keyframes floatMarker {
            0%, 100% { transform: translateY(0) scale(1); }
            50% { transform: translateY(-15px) scale(1.1); }
        }
        
        @@keyframes pulse {
            0% { transform: scale(1); }
