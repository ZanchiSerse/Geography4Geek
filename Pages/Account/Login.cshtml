@page
@model Geography4Geek_1.Pages.Account.LoginModel
@using Geography4Geek_1.Models
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0"><i class="fas fa-globe-americas me-2"></i>Accedi a Geography4Geek</h3>
                </div>
                <div class="card-body p-4">
                    <form id="loginForm" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" required />
                            <label asp-for="Input.Email"><i class="fas fa-envelope me-2"></i>Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" placeholder="Password" required />
                            <label asp-for="Input.Password"><i class="fas fa-lock me-2"></i>Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                Ricordami
                            </label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg text-white">
                                <i class="fas fa-sign-in-alt me-2"></i>Accedi
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <div class="small mb-2">Non hai un account?</div>
                    <a href="/Account/Register" class="btn btn-success">
                        <i class="fas fa-user-plus me-2"></i>Crea un nuovo account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Aggiungi l'animazione al pulsante di login
        document.getElementById('loginForm').addEventListener('submit', function() {
            const button = this.querySelector('button[type="submit"]');
            button.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Accesso in corso...';
            button.disabled = true;
        });
    </script>
}